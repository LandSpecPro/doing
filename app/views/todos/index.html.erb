<div data-role="page" class="jqm-demos jqm-demos-home" data-theme="a">

		<div class="container">
			<div class="row">

				<div class="col-lg-3">
					<input type="text" ng-model="name" placeholder="Enter your name">
					<div class="text-center">
						<h2>Hello {{name}}!</h2>
					</div>

					<button data-role="button" onclick="<%= create_new_todo %>">Create it!</button>
				</div>

				<div class="col-lg-9">

					<div data-role="content" class="jqm-content">
						<ul data-role="listview" data-inset="true" data-filter="true" data-icon="false" data-global-nav="demos" class="jqm-list" data-filter-placeholder="Filter Tasks">

							<% Todo.all.each do |t| %>
								<li data-section="Todos" data-filtertext="<%= t.task %>"><%= t.task %></li>
							<% end %>

							<li data-section="Characters" data-filtertext="ned stark ed stark eddard stark winterfell">Ned Stark</li>
							<li data-section="Characters" data-filtertext="stark cat catelyn tully winterfell riverrun">Catelyn Stark</li>
						</ul>
					</div>

				</div>

			</div>
		</div>

	</div>




